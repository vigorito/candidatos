<br>
<h1>Login</h1>
<br> 

 <%= form_for @user_session do |f| %>
   <p>
     <%= f.label :email %>
     <%= f.text_field :email %>
     <%= error_tag @user_session, :email %>
   </p>
  <p>
     <%= f.label :password %>
     <%= f.password_field :password %>
     <%= error_tag @user_session, :password %>
   </p>
   <p>
     <%= f.submit "Entrar", :class => 'btn btn-primary' %>
   </p>
 <% end %>
 
 